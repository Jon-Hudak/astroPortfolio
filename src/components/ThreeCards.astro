---
const { cards } = Astro.props;
---

<section class="light pb-16">
    <h2 class="h2 text-center py-16">"3D" Web Development Process</h2>
    <ul class="sm:w-1/2 lg:w-auto grid lg:grid-cols-3 gap-16 place-items-center mx-auto px-5 xl:px-24">
        {
            cards.map((card, i) => (
                <li class="lg:w-72 border-8 border-accent-blue rounded-2xl relative px-6 pb-4">
                    <div class="absolute -top-10 left-4 bg-white h-16 w-16 text-6xl text-center font-title text-accent-blue ">{i+1}</div>
                    <h3 class="font-title text-4xl text-center py-6">{card.cardTitle}</h3>
                    <p class="font-semibold text-">{card.cardText}</p>
                </li>
            ))
        }
    </ul>
</section>
