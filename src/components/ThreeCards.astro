---
const { cards } = Astro.props;
---

<section class="light">
    <h2 class="h2 text-center py-8">"3D" Web Development Process</h2>
    <ul class="mt-16 grid grid-cols-3 place-items-center">
        {
            cards.map((card, i) => (
                <li class="w-72 border-8 border-accent-blue rounded-2xl relative px-6 pb-4">
                    <div class="absolute -top-10 left-4 bg-white h-16 w-16 text-6xl text-center font-title text-accent-blue ">{i+1}</div>
                    <h3 class="font-title text-4xl text-center py-6">{card.cardTitle}</h3>
                    <p class="font-semibold text-">{card.cardText}</p>
                </li>
            ))
        }
    </ul>
</section>
