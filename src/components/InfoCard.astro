<article
  class="card px-5 md:px-10 lg:px-0 text-black text-lg flex align-top gap-4 mx-auto lg:min-w-[29rem lg:max-w-md"
>
  <div
    class="transition w-24 h-24 shrink-0 rounded-full border border-accent-blue place-self-start bg-gradient-to-tr from-neutral-400 to-neutral-100"
  >
    <Icon name={icon} class="h-full w-full rotated" />
  </div>
  <div class="relative">
    <h3
      class="card-title h3 lg:h-10 mt-8 text-left"
    >
      {title}
    </h3>

    <p class="card-info mx-auto mt-2 font-medium text-lg" set:html={text} />
  </div>
</article>
<style>
  /* .card{

  } */
  a {
    display: inline;
    border: solid red;
  }
  .rotated{
    transform:rotate(45deg);
  }
</style>
<script>
  import { observer } from "../utils/observer";

  const rotates = document.querySelectorAll(".rotated");

  rotates.forEach((item) => {
      observer.observe(item);
  });
</script>
