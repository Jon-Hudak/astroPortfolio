---
import { Icon } from "astro-icon/components";
const { title, icon, text } = Astro.props;
---


<article
  class="card text-lg gap-4 bg-neutral-800 px-8 w-full"
>
  <div class="infohead grid place-content-center col-span-2">
    <div
      class="transition w-24 h-24 shrink-0 mx-auto"
    >
      <Icon name={icon} class="h-full w-full rotated object-cover mt-4 text-accent-blue" />
    </div>
    <h3 class="card-title h3 mt-6 text-center">
      {title}
    </h3>
  </div>

  <p
    class="card-info mx-auto mt-2 font-medium text-lg col-span-2 py-5 max-w-xl text-neutral-400"
    set:html={text}
  />
</article>
