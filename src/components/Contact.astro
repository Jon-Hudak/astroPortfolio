---
import { Image } from "@astrojs/image/components";

---

<section class="bg-white py-16">
    <h2 class="h2 px-5 mb-8">Contact</h2>
    <div id="formContainer" class="flex py-16">
        <form
            name="Contact"
            class="flex flex-col md:px-10 my-5 max-w-xl mx-auto px-5 bg-white/90 w-3/5 rounded-2xl backdrop-blur-xl "
            method="POST"
            data-netlify="true"
            netlify
            data-netlify-honeypot="bot-field"
        ><h3 class="h3 pt-6 text-center">Let's Talk!</h3>
            <input name="bot-field" class="hidden" />
            <input type="hidden" name="form-name" value="Contact" />
            <label class="formLabel relative" for="name"
                ><span class="text-red-500 absolute -left-3">*</span> Name:</label
            >
            <input
                required
                name="name"
                type="text"
                placeholder="Charles Offdenson"
            />

            <label class="formLabel relative" for="email"
                ><span class="text-red-500 absolute -left-3">*</span> Email:
            </label>
            <input
                required
                id="email"
                name="email"
                type="email"
                placeholder="cfo@dklk.com"
            />
            <label class="formLabel" for="message"> Message:</label>
            <textarea
                id="message"
                name="message"
                class="overflow-y-aut"
                rows="6"
                placeholder="Message"></textarea>
            <label class="text-lg mt-3" for="marketing">
                <input
                    required
                    name="name"
                    type="checkbox"
                    placeholder="Charles Offdenson"
                    class="accent-accent-blue"
                /> Recieve newsletter/marketing emails (not required)</label
            >

            <button
                type="submit"
                class="py-3 px-6 mt-10 bg-accent-blue w-36 rounded-full ml-auto font-bold text-lg sm:text-xl"
            >
                Submit
            </button>
            <p class="text-center text-lg">
                or email me at <a class="" href="mailto:jon@jonhudak.dev"
                    >jon@jonhudak.dev</a
                >
            </p>
        </form>
        <!-- <img class="w-2/5 object-cover w-ful" alt="" format="jpg" src="/images/nordwood-themes-bJjsKbToY34-unsplash.jpg" /> -->
    </div>
</section>
<style>
    input,
    textarea {
        @apply border border-accent-blue rounded-lg bg-accent-blue/10 placeholder:text-black placeholder:font-semibold placeholder:text-xl px-5 py-3 text-white  bg-white;
    }
    #formContainer {
        background-image: url("../images/nordwood-themes-bJjsKbToY34-unsplash.jpg");
        background-position: top; 
        background-repeat: no-repeat; 
        background-size: cover;
    }

    @media (max-width: 600px) {
        #formContainer {
            background-image: none;
        }
    }
</style>
