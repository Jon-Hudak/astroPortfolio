---
import { Image } from "@astrojs/image/components";
import { getCollection } from "astro:content";

const portfolio = await getCollection("portfolio");
console.log(portfolio);
---

<section class="bg-neutral-100 px-10 py-16">
    <h2 class="h2">Portfolio</h2>
    {portfolio.map((item)=>

    
    <article class="flex gap-10 relative py-16">
        <Image alt={item.data.alt} class="object-cover" src={item.data.image1}width={400} height={300} format="webp"/>
        <div>
            <h3>{item.data.title}</h3>
            <p>
                {item.body}
            </p>
            
        </div>
        <a href="https://www.pennbrew.com" class="text-right absolute bottom-5 right-5">Visit the Penn Brewery Site</a>
    </article>)}
</section>
