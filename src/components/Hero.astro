---
let contactOpen = false;

const heroPic = "/images/Jon-Hudak-Pittsburgh-Web-Developer.webm";
const { city, h1, h2, buttonText } = Astro.props;
---

<section
  id="top"
  class="flex flex-col-reverse lg:flex-row pt-24 sm:pt-32 pb-12 lg:pb-0 px-0 lg:pl-10 place-items-center justify-between lg:h-[800px] overflow-hidden bg-gradient-to-b from-dark-gray to-neutral-700"
>
  <div
    id="heroInfo"
    class="flex flex-col max-w-xl xl:max-w-3xl m-auto xl:mb-72 lg:w-1/2"
  >
    <h1
      class="mt-5 text-4xl sm:text-5xl md:pb-5 text-center lg:text-center select-none text-white font-title"
    >
      {city} <strong class="font-normal text-accent-blue"
        >{h1}</strong
      >
    </h1>
    <h2 class="font-sans mt-5 text-xl sm:text-2xl text-center text-white mx-8">
      {h2}
    </h2>

    <a href="/contact-pittsburgh-web-developer"
      class={`button text-center text-xl relative py-6 px-6 mt-10 mx-2 lg:w-auto sm:mx-auto`}
    >
      {buttonText}
    </a>
  </div>
  <div class="lg:w-1/2 flex place-content-center lg:place-content-end mt-auto">
    <video
      id="heroPic"
      aria-label="A photo of Jon Hudak giving a thumbs up with a glitch effect."
      class="lg:mt-12 imgShadow-sm lg:rounded-none lg:border-none lg:shadow-none z-10 w-48 h-48 min-h-max lg: lg:w-auto lg:h-auto object-cover object-top rounded-full shrink-0 border-2 border-accent-blue shadow-xl animate-heroRoll lg:animate-heroSlide"
      autoplay
      loop
      muted
      playsInline
    >
      <source src={heroPic} type="video/webm" />
      This animation doesn't work on your browser. Let me know so I can fix it!
    </video>
  </div>
</section>

