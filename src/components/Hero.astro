---
let contactOpen = false;
import heroPic from "/images/glitchLarge.webm";
---

<section
  id="hero"
  class="flex flex-col place-items-center w-auto mt-2 mx-1 md:mt-5 max-w-screen md:max-w-5xl overflow-hidden"
>
  <div class="overflow-hidden border border-accent-blue rounded-lg">
    <div class="cont py-16 px-0 lg:relative lg:w-[1000px]">
      <div
        class={`flex flex-col-reverse  lg:flex-row w-full grow  px-2 sm:px-24 sm:mt-6 max-w-5xl justify-between content-center rounded-md items-center `}
      >
        <div class="px-10 max-w-lg">
          <h1
            class="mt-5 text-4xl sm:text-5xl pb-5 text-center lg:text-left select-none text-white font-title"
          >
            Freelance Web <span class="text-accent-blue">Developer</span>
          </h1>
          <p
            class="font-sans mt-5 text-xl sm:text-2xl text-center lg:text-left animate-hero"
          >
            I make fast, search engine optimized websites for businesses in the
            Pittsburgh area.
          </p>

          <button
            class={`relative py-6 px-6 mt-10 w-full button animation-spin${
              contactOpen ? "bg-sky-600" : "bg-accent-blue"
            }`}
          >
            Get Your Free Consultation
          </button>
        </div>
          <video
            class="imgShadow-sm lg:absolute lg:bottom-0 lg:-right-24 lg:w-[30rem] lg:rounded-none lg:border-none lg:shadow-none z-10 w-48 object-cover object-top rounded-full shrink-0 border-2 border-accent-blue shadow-xl animate-hero heroSlid"
            autoPlay
            loop
            muted
            playsInline
          >
            <source src={heroPic} type="video/webm" />
          </video>
      </div>

      <div class="bg-opacity-50 mx-5 my-5 place-self-center">
        <!-- {
            contactOpen && (
              <div
                class="max-w-2xl overflow-hidden bg-black place-content-center flex-col rounded-lg origin-top border border-gray-600"
                variants={contactVariant}
                custom={0}
                initial={"hidden"}
                animate={"shown"}
                exit={"hidden"}
              >
                 <ContactSec popup={true} />
              </div>
            )
          } -->
      </div>
    </div>
  </div>
</section>
<style>
  
  
  @keyframes heroSlide{
          0% { opacity: 0; transform: translate(50%);}
          100% {opacity: 1; transform: translate(0px);}
        }
        .heroSlide{
          animation: heroSlide 2s 2s ease-out forwards;
        }
</style>
