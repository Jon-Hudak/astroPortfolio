---
import H1 from "./H1.astro";

const { service, packages } = Astro.props;

---

<section class="dark pb-16">
    <h2 class="h2 text-center py-16">{service} Pricing</h2>
    <div
        class="my-16 flex flex-wrap md:flex-nowrap place-items-center px-12 justify-center gap-6"
    >{
            packages.map((pkg) => 
                <article class={`grow basis-full sm:basis-auto md:grow-0 bg-dark-gray border md:w-[280px] pb-5 h-[440px] relative flex flex-col rounded-md overflow-hidden border-accent-blue shadow-[0_0_20px] shadow-accent-blue ${pkg.featured?"md:border-accent-orange h-full z-10 shadow-[0_0_20px] md:shadow-accent-orange md:scale-125 ":""}`}>
                   <h3 class="py-3 bg-offBlack border-b-2 border-white w-full text-center uppercase font-bold">{pkg.name}</h3>
                   <p class="mt-8 text-accent-blue text-5xl relative text-center flex place-content-center"><span class="text-3xl mt-1">$</span>{pkg.price}<small class="place-self-end">{pkg.per}</small></p>
                   <ul class="pl-8 pr-2 mt-8 mx-auto list-disc text-left max-w-[200px] h-[13em]">
                    {pkg.list.map((item)=><li class="mt-4 first:mt-0">{item}</li>)}</ul>
                    <a href="" class="ghostButton my-4 px-3 py-1 text-lg mx-auto">Contact</a>
                </article>
            )
        }
